<h3>Answers:</h3>
<ul>
  <% @task.answers.each do |answer|%>
    <li> 
      <%= answer.value %> | 
      <%= link_to 'Delete', answer_path(answer), method: :delete %> |
      <%= link_to 'Edit', edit_answer_path(answer), remote: true, class: "EditAnswerLink", id: answer.id %>  
    </li>
  <% end %>
</ul>