var editAnswerDiv = $('a#'+<%= @answer.id %>).next();
if (editAnswerDiv.hasClass("EditAnswerDiv")) {
  editAnswerDiv.remove();
} else { 
  $('a#' + <%= @answer.id%>).after($('<div class="EditAnswerDiv">').
    append("<%= escape_javascript(render('edit')) %>"));
}
$(".alert").hide();
$("input.optional").attr('autocomplete', 'off');