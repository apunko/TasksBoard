<h1>Tasks#show</h1>
<p>Find me in app/views/tasks/show.html.erb</p>
<% my_task = my_task?(@task, current_user)%>
<div> 
  <span class="TaskTitle">
    <%= @task.title %>
  </span> 
  <% if my_task %>
    | <%= link_to 'Edit', edit_task_path(@task) %>
    | <%= link_to 'Delete', task_path(@task), method: :delete %> 
  <% end %>
</div> 
<div>
  creator : <%= @task.user.email %>
</div>
<div>
  description : <%= @task.description %>
</div>

<% if my_task %>
  <div id = "answers">
    <%= render "answers/index"%>
    <%= render "answers/add_button"%>
  </div>
<% else %>
  <%= link_to "Answer", new_answer_attempt_path, remote: true, class: "AnswerAttempt" %>
<% end %>