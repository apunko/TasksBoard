<%= simple_form_for @task do |f| %>
  <%= f.input :title %>
  <%= f.input :tag_list, as: :string, input_html: {
      data: { tokeninput: { collection: @tags, options: @options } } }
  %>
  <%= f.label "Level:"%>
  <%= f.select(:level) do %>
    <% [['Easy', 1], ['Normal', 2], ['Hard', 3]].each do |c| -%>
      <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
  <% end %>
  <%= f.input :description, as: :pagedown, input_html: { preview: true, rows: 10 } %>
  <%= f.button :submit %>
<% end %>
